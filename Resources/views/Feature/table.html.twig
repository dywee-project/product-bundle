{%  extends "DyweeProductBundle::admin.html.twig" %}

{% block body %}
    <div class="title-heading">
        <a href="{{ path('product_feature_add') }}" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Ajouter</a>
        <h1 class="text-center">Liste des Caractéristiques de produit</h1>
    </div>
    {% if featureList|length > 0 %}
        <table class="table table-striped table-hover table-condensed">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {%  for feature in featureList %}
                <tr>
                    <td>{{ feature.id }}</td>
                    <td><a href="{{ path('product_feature_update', {id: feature.id}) }}">{{ feature.name }}</a></td>
                    <td>
                        <div class="btn-group btn-group-xs">
                            <a href="{{ path('product_feature_update', {id: feature.id}) }}" class="btn btn-default"><i class="fa fa-pencil"></i> </a>
                        </div>
                        <a href="{{ path('product_feature_delete', {id: feature.id}) }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucune caractéristique n'a été enregistrée.</p>
        <p><a href="{{ path('product_feature_add') }}" class="btn btn-success"><i class="fa fa-plus"></i> Ajouter une caractéristique</a></p>
    {% endif %}

{% endblock %}