{% if brandList|length > 0 %}
    <table class="table table-striped table-hover table-condensed">
        <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Website</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {%  for brand in brandList %}
            <tr>
                <td><small>{{ brand.id }}</small></td>
                <td><small>{{ brand.name }}</small></td>
                <td><small>{{ brand.website }}</small></td>
                <td><small>
                        <a href="{{ path('product_brand_update', {id: brand.id}) }}" class="link-unstyled"><i class="fa fa-pencil"></i> </a>
                        <a href="{{ path('product_brand_delete', {id: brand.id}) }}" class="link-unstyled"><i class="fa fa-trash-o"></i> </a>
                    </small>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>Vous n'avez pas encore ajout√© de marque.</p>
    <a href="{{ path('product_brand_add') }}" class="btn btn-success"><i class="fa fa-plus"></i> Ajouter une marque</a>
{% endif %}