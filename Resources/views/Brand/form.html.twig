{# Dywee\EshopBundle\Resources\View\Brand\form.html.twig #}

{{ form_start(form) }}

    {# les erreurs du formulaire #}
    {{ form_errors(form) }}

<div class="row">
    <div class="col-lg-3">
        <div class="box box-default">
            <div class="box-header with-border">
                <h2 class="box-title">Image</h2>
            </div>
            <div class="box-body">
                {{ form_widget(form.imageFile) }}
            </div>
        </div>
    </div>
    <div class="col-lg-7">
        <div class="box box-default">
            <div class="box-header with-border">
                <h2 class="box-title">Informations</h2>
            </div>
            <div class="box-body">
                <div class="form-group">
                    {{ form_label(form.name, "Nom") }}
                    {{ form_errors(form.name) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.name) }}
                    </div>
                </div>
                <div class="col-sm-9 col-sm-offset-2">
                    {{ form_widget(form.Sauvegarder, {"attr": {"class": "btn-success btn-block"}}) }}
                </div>
            </div>
        </div>

    </div>
</div>

{{ form_rest(form) }}

{{ form_end(form) }}