{# Dywee\EshopBundle\Resources\View\Blog\form.html.twig #}

{{ form_start(form) }}
{{ form_errors(form) }}

<div class="row">
    <div class="col-md-3">
        <div class="box box-default">
            <div class="box-header with-border">
                <h2 class="box-title">Image</h2>
            </div>
            <div class="box-body">
                {{ form_errors(form.imageFile) }}
                {{ form_widget(form.imageFile) }}
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="col-md-6">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h2 class="box-title">Informations</h2>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.name, "Nom") }}
                        {{ form_errors(form.name) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.parent, "Catégorie parente") }}
                        {{ form_errors(form.parent) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.parent) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox">
                                {{ form_errors(form.enabled) }}
                                {{ form_widget(form.enabled) }}
                                {{ form_label(form.enabled, "Visible dans le menu") }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.position, "Position") }}
                        {{ form_errors(form.position) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.position) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.enabled, "Statut") }}
                        {{ form_errors(form.enabled) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.enabled) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h2 class="box-title">Paramètres</h2>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.seoUrl, "url optimisée") }}
                        {{ form_errors(form.seoUrl) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.seoUrl) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox">
                                {{ form_errors(form.enableMulti) }}
                                {{ form_widget(form.enableMulti) }}
                                {{ form_label(form.enableMulti, "Visible dans le menu") }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-6">


    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="main">

        </div>
        <div role="tabpanel" class="tab-pane" id="settings">

        </div>
    </div>

    <div class="col-sm-10 col-sm-offset-2">
        {{ form_widget(form.sauvegarder, {"attr": {"class": "btn btn-success"}}) }}
    </div>

</div>
{{ form_rest(form) }}
{{ form_end(form) }}
