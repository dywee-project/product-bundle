{# Dywee\EshopBundle\Resources\View\Blog\form.html.twig #}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

<div class="col-md-6">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# les erreurs du formulaire #}
    {{ form_errors(form) }}

    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#main" aria-controls="home" role="tab" data-toggle="tab">Général</a></li>
        <li role="presentation"><a href="#settings" aria-controls="profile" role="tab" data-toggle="tab">Paramètres</a></li>
    </ul>
    <p>&nbsp;</p>
    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="main">
            <div class="form-group">
                {{ form_label(form.name, "Nom") }}
                {{ form_errors(form.name) }}
                <div class="col-sm-10">
                    {{ form_widget(form.name) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.parent, "Catégorie parente") }}
                {{ form_errors(form.parent) }}
                <div class="col-sm-10">
                    {{ form_widget(form.parent) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        {{ form_errors(form.isVisible) }}
                        {{ form_widget(form.isVisible) }}
                        {{ form_label(form.isVisible, "Visible dans le menu") }}
                    </div>
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.position, "Position") }}
                {{ form_errors(form.position) }}
                <div class="col-sm-10">
                    {{ form_widget(form.position) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.state, "Statut") }}
                {{ form_errors(form.state) }}
                <div class="col-sm-10">
                    {{ form_widget(form.state) }}
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="settings">
            <div class="form-group">
                {{ form_label(form.seoUrl, "url optimisée") }}
                {{ form_errors(form.seoUrl) }}
                <div class="col-sm-10">
                    {{ form_widget(form.seoUrl) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        {{ form_errors(form.enableMulti) }}
                        {{ form_widget(form.enableMulti) }}
                        {{ form_label(form.enableMulti, "Visible dans le menu") }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-10 col-sm-offset-2">
        {{ form_widget(form.sauvegarder, {"attr": {"class": "btn btn-success"}}) }}
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>